<h1>Drugs</h1>

<%= link_to 'New drug', new_drug_path %>

<% @drugs.each do |drug| %>

<div class="product">
  <div class='product-upvote'>
    <div class="product-arrow"></div>
    <div class='product-count'> <%= drug.id %> </div>
  </div>
  <div class='product-body'>
    <h3><%= drug.name %> <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, drug_path(drug) %> </h3>
    <p><%= drug.description %></p>
  </div>
  <ul class="list-inline product-controls hidden-sm hidden-xs">
    <li><a href=""><i class="fa fa-heart"></i></a></li>
    <li><a href=""><i class="fa fa-share"></i></a></li>
    <li><a href=""><i class="fa fa-star"></i></a></li>
  </ul>
</div>

<% end %>
