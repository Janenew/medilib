<p> lastname : <%= @user.lastname %> </p>
<p> email : <%= @user.email %> </p>

<% @user.favorites.each do |favorite| %>

  <div class="product">
    <div class='product-upvote'>
      <div class="product-arrow"></div>
      <div class='product-count'> <%= favorite.drug.id %> </div>
    </div>
    <div class='product-body'>
      <h3><%= favorite.drug.name %> <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, drug_path(favorite.drug) %> </h3>
      <p><%= favorite.drug.description %></p>
